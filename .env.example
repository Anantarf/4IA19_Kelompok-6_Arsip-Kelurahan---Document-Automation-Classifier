# Application Configuration Template
# Copy this file to .env and fill in actual values

# App Settings
APP_NAME=Arsip Kelurahan Pela Mampang
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# Security - REQUIRED for JWT authentication (generate a secure key in production)
SECRET_KEY=your-secure-secret-key-here-minimum-32-characters

# Database Configuration
# MySQL Database (Primary - Set MYSQL_USE=1 to enable)
MYSQL_USE=1
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DB=docdb
MYSQL_PORT=3306

# Legacy SQLite (Fallback - Set MYSQL_USE=0 to use SQLite)
SQLITE_DB_PATH=data/app.db

# Storage
STORAGE_ROOT=storage/arsip_kelurahan
TEMP_UPLOAD_DIR=storage/uploads

# Machine Learning Model
ML_MODEL_PATH=data/classifier.pkl

# OCR Configuration
# Path to Tesseract executable (Windows example: C:\\Program Files\\Tesseract-OCR\\tesseract.exe)
# Leave empty if Tesseract is in system PATH
TESSERACT_CMD=
TMP_OCR_DIR=storage/tmp_ocr

# CORS Configuration (optional, comma-separated)
# CORS_ORIGINS=http://localhost:5173,https://yourdomain.com
